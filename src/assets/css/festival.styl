/*底部的动画箭头*/
@keyframes tipmove{
    0%{bottom:10px;opacity:0}
    50%{bottom:15px;opacity:1}
    100%{bottom:20px;opacity:0}
}
.ani-arrow {
    width:20px;
    height:15px;
    left: 50%;
    margin-left: -10px;
    bottom: 15px;
    position:absolute;
    z-index:999; 
    animation: tipmove 1.5s infinite ease-in-out;
}
