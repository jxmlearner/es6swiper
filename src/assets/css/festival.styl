/*底部的动画箭头*/
@keyframes tipmove{
    0%{bottom:10px;opacity:0}
    50%{bottom:15px;opacity:1}
    100%{bottom:20px;opacity:0}
}
.ani-arrow {
    width:20px;
    height:15px;
    left: 50%;
    margin-left: -10px;
    bottom: 15px;
    position:absolute;
    z-index:999; 
    animation: tipmove 1.5s infinite ease-in-out;
}


/*第一屏动画*/
.page1.animate {
    // img {
    //     opacity: 0;  /* 动画开始之前都隐藏不显示 */
    // }
    .flower {  /* 花 */    
        animation: fadeInLeft .5s ease forwards
    }
    .s1 {
        animation: fadeIn .5s .5s forwards
    }
    .s1-t1 {
        animation: bounceIn .5s 1s forwards
    }
    .s1-t2 {
        animation: fadeIn .5s 1.5s forwards
    }
} 

/*第二屏动画*/
.page2.animate {
    .s2-i1 {
        animation: fadeInDown .5s forwards
    }
    .s2-i2 {
        animation: fadeInUp .5s .5s forwards
    }
    .s2-i3 {
        animation: fadeInLeft .5s 1s forwards
    }
    .s2-i4 {
        animation: fadeInRight .5s 1.5s forwards
    }
    .s2-i5 {
        animation: fadeInLeft .5s 2s forwards
    }
} 
/*第三屏动画*/
.page3.animate {
