@import './common.styl'
@import './animate.css' 

*{margin: 0; padding: 0;}
html,body {height: 100%;}
body {font-family: "microsoft yahei";}

.swiper-container {
    width: 100%;
    height: 100%;
    background: #fff;
}
.swiper-slide {
    width: 100%;
    height: 100%;
    background: url('../festival/bg.jpg') no-repeat left top;
    background-size: 100% 100%;
}
img {
    display: block;
}

.swiper-pagination-bullet {
    width: 6px;
    height: 6px;
    background: #fff;
    opacity: .4;
}
.swiper-pagination-bullet-active {
    opacity: 1;
}

.swiper-slide img {
    position: absolute;
    opacity: 0;        /*动画的初始状态,都隐藏起来*/
}
