*{margin:0; padding: 0; box-sizing: border-box;}
a {text-decoration: none;}
a:focus {outline: none;}
ul,li {list-style:none;}

.box {
    width: 500px;
    height: 400px;
    margin: 0 auto;
    border: 1px solid #333;
}
.inner {
    width: 300px;
    height: 200px;
    margin: 100px auto 0;
    border: 1px solid #f60;
}